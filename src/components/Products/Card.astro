---
import { PRODUCTOS } from "./Productos";
import "./Productos";
---
<section class="ml-6 mr-6 block md:grid grid-cols-3 ">
  {
    PRODUCTOS.map(
      ({
        foto,
        nombre,
        descripcion,
        caracteristicas,
        dimensiones,
        material,
        instrucciones,
        precauciones,
        precio,
        descuento,
      }) => (
        <article class="bg-gray-200 m-2 flex items-center border rounded-md p-2 text-wrap md:block">
          <section>
            <img src={foto} alt={descripcion} class="object-cover rounded-md m-auto w-1/2 md:w-1/3 " />
          </section>
          <section class="text-gray-600 m-1 text-xs ">
            <h2 class="text-xl text-center font-bold text-purple-400">{nombre}</h2>
              <div>
                <ul>
                <li>- {descripcion}</li>
                <li>- {caracteristicas}</li>
                <li>- {dimensiones}</li>
                <li>- {material}</li>
                <li>- {instrucciones}</li>
                <li>- {precauciones}</li>
                <li>- ${precio} - {descuento}</li>
              </ul>
              </div>
            </section>
        </article>
      )
    )
  }
</section>
